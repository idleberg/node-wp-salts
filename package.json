{
  "name": "wp-salts",
  "version": "3.0.0",
  "description": "Generates an object of default WordPress salts (or any other string)",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
		"build:cjs": "tsup --config tsup.config.ts --format=cjs",
		"build:esm": "tsup --config tsup.config.ts --format=esm",
    "dev": "npm run build:esm -- --watch",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "prepare": "husky install",
    "publish": "np --no-yarn",
    "start": "npm run start",
    "test": "uvu -r tsm tests"
  },
  "type": "module",
  "typings": "./dist/wp-salts.d.ts",
  "exports": {
    "import": "./dist/wp-salts.js",
    "require": "./dist/wp-salts.cjs"
  },
  "engine": {
    "node": ">=18"
  },
  "files": [
    "dist/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts.git"
  },
  "keywords": [
    "wordpress",
    "salt",
    "salts",
    "shuffle-salts",
    "cryptography"
  ],
  "dependencies": {
    "get-random-values": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "np": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "remark-cli": "^12.0.0",
    "remark-preset-lint-recommended": "^6.1.3",
    "remark-preset-prettier": "^2.0.1",
    "tslib": "^2.6.2",
    "tsm": "^2.3.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "uvu": "^0.5.6"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
