{
  "name": "wp-salts",
  "version": "2.0.1",
  "description": "Generates an object of default WordPress salts (or any other string)",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "prepare": "husky install",
    "publish": "np --no-yarn",
    "start": "rollup --watch --config",
    "test": "uvu tests"
  },
  "type": "module",
  "typings": "./types/index.d.ts",
  "exports": {
    "import": "./dist/wp-salts.mjs",
    "require": "./dist/wp-salts.cjs"
  },
  "files": [
    "dist/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts.git"
  },
  "keywords": [
    "wordpress",
    "salt",
    "salts",
    "cryptography"
  ],
  "license": "MIT",
  "dependencies": {
    "get-random-values": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "np": "^7.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^2.0.1",
    "rollup": "^3.2.3",
    "rollup-plugin-filesize": "^9.1.2",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "uvu": "^0.5.6"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
