{
  "name": "wp-salts",
  "version": "2.0.0",
  "description": "Generates an object of default WordPress salts (or any other string)",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "rollup --watch --config",
    "publish": "np --no-yarn",
    "test": "ava --verbose",
    "prepare": "husky install"
  },
  "type": "module",
  "exports": {
    "import": "./dist/wp-salts.mjs",
    "require": "./dist/wp-salts.cjs"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts.git"
  },
  "keywords": [
    "wordpress",
    "salt",
    "salts",
    "cryptography"
  ],
  "license": "MIT",
  "dependencies": {
    "get-random-values": "^1.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/node": "^16.4.3",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "ava": "^4.0.1",
    "eslint": "^8.7.0",
    "eslint-plugin-json": "^3.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.2",
    "np": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "remark-cli": "^10.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^1.0.0",
    "rollup": "^2.38.0",
    "rollup-plugin-filesize": "^9.1.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
