{
	"name": "wp-salts",
	"version": "5.0.1",
	"description": "Generates an object of default WordPress salts. Fully offline.",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "npm run build -- --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:knip": "knip --cache --production",
		"lint:publint": "publint",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"start": "npm run start",
		"test": "uvu -r tsm tests"
	},
	"type": "module",
	"typings": "./dist/wp-salts.d.ts",
	"exports": "./dist/wp-salts.js",
	"engine": {
		"node": ">=18"
	},
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-wp-salts.git"
	},
	"keywords": [
		"wordpress",
		"salt",
		"salts",
		"shuffle-salts",
		"cryptography"
	],
	"dependencies": {
		"get-random-values": "^4.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@idleberg/configs": "^0.3.1",
		"@types/node": "^24.9.1",
		"concurrently": "^9.2.1",
		"knip": "^5.66.3",
		"np": "^10.2.0",
		"publint": "^0.3.15",
		"tsdown": "^0.15.10",
		"tsm": "^2.3.0",
		"typescript": "^5.9.3",
		"uvu": "^0.5.6",
		"valibot": "^1.1.0"
	},
	"packageManager": "pnpm@10.19.1-oidc-test.3+sha512.e5961a4b56bb37620f97b65da4ca56216634bf39ed358eda925f0f036534d458fa249d93ed0021410523f8bb7ed8512b61fe5532ed3e81777793366c6be026b5"
}
