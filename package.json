{
	"name": "wp-salts",
	"version": "6.0.0",
	"description": "Generates an object of default WordPress salts. Fully offline.",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "npm run build -- --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"start": "npm run start",
		"test": "vitest run"
	},
	"type": "module",
	"exports": {
		"types": "./dist/wp-salts.d.ts",
		"import": "./dist/wp-salts.js"
	},
	"engine": {
		"node": ">=20"
	},
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-wp-salts.git"
	},
	"keywords": [
		"wordpress",
		"salt",
		"salts",
		"shuffle-salts",
		"cryptography"
	],
	"devDependencies": {
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@idleberg/configs": "^0.4.1",
		"@types/node": "^24.9.2",
		"@vitest/coverage-v8": "4.0.15",
		"concurrently": "^9.2.1",
		"np": "^10.2.0",
		"tsdown": "^0.18.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"packageManager": "pnpm@10.19.1-oidc-test.3+sha512.e5961a4b56bb37620f97b65da4ca56216634bf39ed358eda925f0f036534d458fa249d93ed0021410523f8bb7ed8512b61fe5532ed3e81777793366c6be026b5"
}
