{
  "name": "wp-salts",
  "version": "5.0.0",
  "description": "Generates an object of default WordPress salts (or any other string). No internet required.",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "npm run build -- --watch",
    "fix": "eslint --fix ./src",
    "lint:code": "eslint **/*.json **/*.ts --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "prepare": "husky",
    "publish:jsr": "deno publish",
    "publish:npm": "np --no-yarn --any-branch",
    "start": "npm run start",
    "test": "uvu -r tsm tests"
  },
  "type": "module",
  "typings": "./dist/wp-salts.d.ts",
  "exports": "./dist/wp-salts.js",
  "engine": {
    "node": ">=18"
  },
  "files": [
    "dist/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts.git"
  },
  "keywords": [
    "wordpress",
    "salt",
    "salts",
    "shuffle-salts",
    "cryptography"
  ],
  "dependencies": {
    "get-random-values": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-unicorn": "^53.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "np": "^10.0.5",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.2.5",
    "remark-cli": "^12.0.1",
    "remark-preset-lint-recommended": "^7.0.0",
    "remark-preset-prettier": "^2.0.1",
    "tslib": "^2.6.2",
    "tsm": "^2.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "uvu": "^0.5.6"
  },
  "lint-staged": {
    "*.json": "eslint --cache --fix",
    "*.ts": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.md": "prettier --write"
  },
  "packageManager": "pnpm@9.1.4+sha512.9df9cf27c91715646c7d675d1c9c8e41f6fce88246f1318c1aa6a1ed1aeb3c4f032fcdf4ba63cc69c4fe6d634279176b5358727d8f2cc1e65b65f43ce2f8bfb0"
}
