{
  "name": "wp-salts",
  "version": "2.0.1",
  "description": "Generates an object of default WordPress salts (or any other string)",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "prepare": "husky install",
    "publish": "np --no-yarn",
    "start": "rollup --watch --config",
    "test": "uvu tests"
  },
  "type": "module",
  "typings": "./types/index.d.ts",
  "exports": {
    "import": "./dist/wp-salts.mjs",
    "require": "./dist/wp-salts.cjs"
  },
  "files": [
    "dist/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts.git"
  },
  "keywords": [
    "wordpress",
    "salt",
    "salts",
    "cryptography"
  ],
  "license": "MIT",
  "dependencies": {
    "get-random-values": "^1.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/node": "^16.18.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "np": "^7.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "remark-cli": "^10.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^1.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-filesize": "^9.1.2",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
