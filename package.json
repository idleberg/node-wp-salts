{
  "name": "wp-salts",
  "version": "1.1.2",
  "description": "Generates an object of default WordPress salts (or any other string)",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "start": "rollup --watch --config",
    "publish": "np --no-yarn",
    "test": "ava ./test/*.js --verbose"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-wp-salts.git"
  },
  "keywords": [
    "wordpress",
    "salt",
    "salts",
    "cryptography"
  ],
  "license": "MIT",
  "dependencies": {
    "get-random-values": "^1.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "ava": "^3.15.0",
    "eslint": "^7.17.0",
    "eslint-plugin-json": "^2.1.2",
    "esm": "^3.2.25",
    "husky": "^4.3.7",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.5.3",
    "np": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "remark-cli": "^9.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "remark-preset-prettier": "^0.4.0",
    "rollup": "^2.36.1",
    "rollup-plugin-filesize": "^9.1.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.json": "jsonlint --quiet",
    "*.md": "prettier --write"
  }
}
